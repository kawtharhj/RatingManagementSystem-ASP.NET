@using RatingManagementSystem.Data.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RatingManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RatingManagementSystem.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light" id="neubar">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index"> Rating Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class=" collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto ">
                        @if (User.IsInRole("Doctor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link mx-2 active" asp-page="/Doctor/PhdApplication">Send Application</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2 " aria-current="page" asp-page="/Doctor/MyApplications">My Application</a>
                            </li>

                        }

                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-page="/Employee/CheckApplication">Check Application</a>
                            </li>

                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-page="/Admin/ManageUsers">Manage Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-page="/Admin/AllThesisRateApplications">All Applications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-page="/Admin/ThesisRate">ThesisRate</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2" asp-page="/Admin/PhdThesisRate">PhdThesisRate</a>
                            </li>
                        }

                       
                        
                        

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ThesisRateApplication - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>