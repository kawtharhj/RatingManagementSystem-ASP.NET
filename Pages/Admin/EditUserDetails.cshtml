@page
@model RatingManagementSystem.Pages.Admin.EditUserDetailsModel
@{
}


<h1>Edit @Model.editUser.FirstName Details</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="editUser.FirstName"></label>
        <input asp-for="editUser.FirstName" class="form-control" />
        <span asp-validation-for="editUser.FirstName" style="color:goldenrod"></span>
    </div>

    <div class="form-group">
        <label asp-for="editUser.LastName"></label>
        <input asp-for="editUser.LastName" class="form-control" />
        <span asp-validation-for="editUser.FirstName" style="color:goldenrod"></span>
    </div>

    <div class="form-group">
        <label asp-for="editUser.Email"></label>
        <input asp-for="editUser.Email" class="form-control" />
        <span asp-validation-for="editUser.Email" style="color:goldenrod"></span>
    </div>

    <div class="form-group">
        <label asp-for="editUser.Password"></label>
        <input asp-for="editUser.Password" class="form-control" />
        <span asp-validation-for="editUser.Password" style="color:goldenrod"></span>
    </div>

    <div class="form-group">
        <label asp-for="editUser.ConfirmPassword"></label>
        <input asp-for="editUser.ConfirmPassword" class="form-control" />
        <span asp-validation-for="editUser.ConfirmPassword" style="color:goldenrod"></span>
    </div>


    <div class="form-group">
        <label asp-for="editUser.PhoneNumber"></label>
        <input asp-for="editUser.PhoneNumber" class="form-control" />
        <span asp-validation-for="editUser.PhoneNumber" style="color:goldenrod"></span>
    </div>

    <div class="form-group">
        <label asp-for="editUser.Major"> </label>
        <select class="form-control" asp-for="editUser.Major" asp-items="Model.DrMajors">
        </select>
    </div>


    <div asp-validation-summary="All" style="color:goldenrod"> </div>
    <input type="hidden" asp-for="editUser.id" />
    <input type="submit" class="btn btn-primary" value="Update" />

</form>

<a asp-page="ManageUsers" class="btn btn-outline-secondary ">Back</a>




