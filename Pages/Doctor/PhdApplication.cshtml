@page
@model RatingManagementSystem.Pages.Doctor.PhdApplicationModel
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<h1>Please Fill All the Fields</h1>

</head>
<body>

<div class="row">
    <div class="col-md-6">

        <form method="post" class="large-form" enctype="multipart/form-data" id="uploadForm">
            <!-- <div asp-validation-summary="All" style="color:goldenrod"></div> -->


            <div class="form-group">
                <label>Choose Your Application Type </label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="PhdThesisRate" asp-for="appl.ThesisRateType" >
                    <label class="form-check-label">PhdThesisRate</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="ThesisRate" asp-for="appl.ThesisRateType">
                    <label class="form-check-label">ThesisRate</label>
                </div>
            </div>
            <hr />

            <div class="form-group">
                <label asp-for="appl.FirstName"> </label>
                <input class="form-control" asp-for="appl.FirstName" />
                <span asp-validation-for="appl.FirstName" style="color:goldenrod"></span>
            </div>


            <div class="form-group">
                <label asp-for="appl.LastName"> </label>
                <input class="form-control" asp-for="appl.LastName" />
                <span asp-validation-for="appl.LastName" style="color:goldenrod"></span>
            </div>


            <div class="form-group">
                <label asp-for="appl.DrMajor"> </label>
                <select class="form-control" asp-for="appl.DrMajor" asp-items="Model.Majors">
                </select>
            </div>
            <br />

            <div class="form-group">
                <label>Are You a Doctor In Faculity of Science? </label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="Yes" asp-for="appl.DrInFds" checked>
                    <label class="form-check-label">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="No" asp-for="appl.DrInFds">
                    <label class="form-check-label">No</label>
                </div>
            </div>

            <div class="form-group">
                <label> <h4>If No, Specify : </h4></label>
                <input type="text" asp-for="appl.YourFaculty" />
            </div>

            <div class="form-group">
                <label asp-for="appl.ThesisTitle"> </label>
                <input type="text" class="form-control" asp-for="appl.ThesisTitle" />
                <span asp-validation-for="appl.ThesisTitle" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.DefenseDate"> </label>
                <input class="form-control" asp-for="appl.DefenseDate" />
                <span asp-validation-for="appl.DefenseDate" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.DefenseLocation"> </label>
                <input type="text" class="form-control" asp-for="appl.DefenseLocation" />
                <span asp-validation-for="appl.DefenseLocation" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.DefenseUniversity"> </label>
                <input type="text" class="form-control" asp-for="appl.DefenseUniversity" />
                <span asp-validation-for="appl.DefenseUniversity" style="color:goldenrod"></span>
            </div>


            <hr />
            <div class="form-group">
                <label asp-for="appl.PhDThesis"> </label>
                <input type="file" class="form-control" asp-for="appl.PhDThesis" />
                <span asp-validation-for="appl.PhDThesis" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.MasterThesis"> </label>
                <input type="file" class="form-control" asp-for="appl.MasterThesis" />
                <span asp-validation-for="appl.MasterThesis" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.CV"> </label>
                <input type="file" class="form-control" asp-for="appl.CV" />
                <span asp-validation-for="appl.CV" style="color:goldenrod"></span>
            </div>

            <div class="form-group" id="fileInputs">
                <label asp-for="appl.Publications"> </label>
                    <input type="file" class="form-control" asp-for="appl.Publications" name="appl.Publications" multiple />
                <span asp-validation-for="appl.Publications" style="color:goldenrod"></span>
                <button type="button" onclick="addFileInput()">Add More Files</button>
            </div>

            <div class="form-group">
                <label asp-for="appl.ConferenceParticipation"> </label>
                <input type="file" class="form-control" asp-for="appl.ConferenceParticipation" />
                <span asp-validation-for="appl.ConferenceParticipation" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.PhDEquivalency"> </label>
                <input type="file" class="form-control" asp-for="appl.PhDEquivalency" />
                <span asp-validation-for="appl.PhDEquivalency" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.RapportdeSoutenance"> </label>
                <input type="file" class="form-control" asp-for="appl.RapportdeSoutenance" />
                <span asp-validation-for="appl.RapportdeSoutenance" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.BacCertificate"> </label>
                <input type="file" class="form-control" asp-for="appl.BacCertificate" />
                <span asp-validation-for="appl.BacCertificate" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.MasterCertificate"> </label>
                <input type="file" class="form-control" asp-for="appl.MasterCertificate" />
                <span asp-validation-for="appl.MasterCertificate" style="color:goldenrod"></span>
            </div>

            <div class="form-group">
                <label asp-for="appl.PhDCertificate"> </label>
                <input type="file" class="form-control" asp-for="appl.PhDCertificate" />
                <span asp-validation-for="appl.PhDCertificate" style="color:goldenrod"></span>
            </div>

            <div class="form-group" id="OtherFileInput">
                <label asp-for="appl.Other"> </label>
                <input type="file" class="form-control" asp-for="appl.Other" name="appl.Other" multiple/>
                <span asp-validation-for="appl.Other" style="color:goldenrod"></span>
                    <button type="button" onclick="addOtherFileInput()">Add More Files</button>
            </div>

            <hr />
            <br />

            <input type="submit" value="Submit" class="btn btn-outline-warning" />

        </form>


        <script>
                function addFileInput() {
                const fileInputsContainer = document.getElementById('fileInputs');
                const fileInput = document.createElement('input');
                fileInput.type = 'file';
                fileInput.name = 'appl.Publications';
                fileInput.accept = '.pdf';
                fileInput.multiple = true;
                fileInput.setAttribute('asp-for', 'appl.Publications');
                fileInputsContainer.appendChild(fileInput);
            };

            function addOtherFileInput() {
                    const fileInputsContainer = document.getElementById('OtherFileInput');
                    const fileInput2 = document.createElement('input');
                    fileInput2.type = 'file';
                    fileInput2.name = 'appl.Other';
                    fileInput2.accept = '.pdf';
                    fileInput2.multiple = true;
                    fileInput2.setAttribute('asp-for', 'appl.Other');
                    fileInputsContainer.appendChild(fileInput2);
            };
        </script>
    </div>
</div>

</body>
</html>

