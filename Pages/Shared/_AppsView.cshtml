@{
}


   

    <div class="row">
        <div class="col-md-12">
            <div class="table-wrap">

                <table class="table table-responsive-xl">
                    <thead>

                        <tr class="table-dark">
                            <th style="color:bisque;font-weight:bold;font-size:large">
                                Name:
                            </th>
                            <th style="color:bisque;font-weight:bold;font-size:large">
                                Major
                            </th>
                            <th style="color:bisque;font-weight:bold;font-size:large">
                                Thesis Title
                            </th>
                            <th style="color:bisque;font-weight:bold;font-size:large">
                                Defense Date:
                            </th>
                            <th style="color:bisque;font-weight:bold;font-size:large">
                                Status
                            </th>

                            <th></th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var user in Model.ApplicationData)
                        {
                            <tr>
                                <td>
                                    @user.FirstName
                                </td>
                                <td>
                                    @user.DrMajor
                                </td>
                                <td>
                                    @user.ThesisTitle
                                </td>
                                <td>
                                    @user.DefenseDate - @user.DefenseUniversity
                                </td>

                                else
                                @if (user.ApplicationStatus == "In-Progress")
                                {
                                    <td class="status"><span class="waiting">@user.ApplicationStatus</span></td>
                                }
                               
                                <td>
                                    <a asp-page="/Committee/ApplicationDetails" asp-route-id="@user.ApplicationID" class="brick-link">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<p>
